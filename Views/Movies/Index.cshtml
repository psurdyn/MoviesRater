@model IList<MoviesRater.Models.MovieModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<ul>
    @for (var i = 0; i < Model.Count(); i++)
    {
        <li>@Html.ActionLink(Model[i].Title, "Details", "Movies", new { id = i + 1 });</li>
    }
</ul>
