@model MoviesRater.ViewModels.MovieRatingVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.OpeningCrawl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.OpeningCrawl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Director)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Director)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Producer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Producer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.ReleaseDate)
        </dd>
    </dl>
    <div>
        <h2>Rate the movie:</h2>
        @using (Html.BeginForm("Rate", "Movies", FormMethod.Post))
        {
            <select name="Rating">
                <option selected value="0">---Select---</option>
                @foreach (var item in Model.Rating)
                {
                    <option value="@item.Id">@item.RatingId</option>
                }
            </select>
            <input type="submit" value="Send" />
        }
    </div>
</div>

